<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.GUIController">
   <top>
      <VBox prefHeight="150" prefWidth="150" BorderPane.alignment="CENTER">
         <children>
            <Label text="Enter Two Values:" />
            <HBox prefWidth="150">
               <children>
                  <Label prefWidth="82.0" text="Hypotenus">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="hTf" promptText="Enter Value" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <HBox prefWidth="150">
               <children>
                  <Label prefWidth="82.0" text="Opposite">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="oTf" promptText="Enter Value" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <HBox prefWidth="150">
               <children>
                  <Label prefWidth="82.0" text="Adjacent">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="aTf" promptText="Enter Value" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <HBox prefWidth="150">
               <children>
                  <Label prefWidth="82.0" text="Angle θ">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="tTf" promptText="Enter Value" />
                  <Label prefHeight="24.0" prefWidth="26.0" text="  °" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                    <ToggleButton fx:id="degreesToggleButton" onAction="#toggleAngleMode" selected="true" text="Degrees" />
                    <ToggleButton fx:id="radiansToggleButton" onAction="#toggleAngleMode" text="Radians" />
                  <Button mnemonicParsing="false" onAction="#calculate" prefHeight="25.0" prefWidth="280" text="Calculate" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
</BorderPane>
